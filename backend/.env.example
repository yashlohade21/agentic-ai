# Example environment variables - Copy to .env and fill in your values

# Firebase Configuration (choose one method)
# Method 1: JSON content as environment variable (recommended for Render)
FIREBASE_SECRET_JSON={"type": "service_account", "project_id": "your-project-id", ...}

# Method 2: Path to service account file
FIREBASE_SECRET_PATH=./google-service.json

# Development option: use mock Firebase (no real database)
USE_MOCK_FIREBASE=false

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=

# Performance Settings
PYTHON_GC_GENERATION=700,10,10
PYTHONUNBUFFERED=1

# Render deployment detection
RENDER=

# API Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Session Configuration
SESSION_TIMEOUT=7200

# Logging
LOG_LEVEL=INFO